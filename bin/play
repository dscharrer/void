#!/bin/bash

# Play files/directories
# Usage: play [mplayer2-flags] paths...

paths=()
flags=(-msgcolor -fs -cache 8000)

mode=0
for arg in "$@" ; do
	
	if [ $mode != 2 ] && [ "$arg" = '--' ] ; then
		mode=2
	else if [ $mode = 2 ] ; then
		paths+=("$arg")
	else if [ '-' = "${arg:0:1}" ] ; then
		flags+=("$arg")
		mode=1
	else if [ $mode = 1 ] ; then
		flags+=("$arg")
		mode=0
	else
		paths+=("$arg")
	fi fi fi fi
	
done

flags+=("--")

while IFS= read -r -d '' file; do
	flags+=("$file")
done < <(find "${paths[@]}" -type f -print0)

exec mplayer2 "${flags[@]}"
